{
  "name": "texas-senate-bill-tracker",
  "version": "1.0.0",
  "description": "A web application to track Texas Senate bills with AI-powered summaries",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./frontend/styles/input.css -o ./frontend/styles/output.css --watch",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:unit": "jest tests/services tests/models --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:frontend": "jest tests/frontend --runInBand",
    "test:performance": "jest tests/performance --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand"
  },
  "keywords": [
    "texas",
    "legislature",
    "bills",
    "tracker",
    "ai",
    "government"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/firestore": "^7.11.4",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1",
    "newsapi": "^2.4.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.6"
  }
}
